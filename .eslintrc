{
    "extends": ["next", "idiomatic"],
    "rules": {
        "max-len": [
            1,
            120,
            2,
            { ignoreComments: true }
        ],
        "no-console": 0,
        "indent": [
            1,
            "tab"
        ],
        "space-in-parens": 0,
        "object-curly-spacing": 1,
        "one-var": 0,
        "computed-property-spacing": 1,
        "array-bracket-spacing": 1,
        "linebreak-style": 0,
        "semi": 0,
        "no-mixed-spaces-and-tabs": 0,
        "sort-keys": 1
    }
}
